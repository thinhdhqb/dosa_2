<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/custom_view"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgLogoItem"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTypeItem"
                android:textColor="#2457C5"
                android:gravity="left"
                android:textSize="14sp"
                android:text="Văn hóa"
                android:layout_margin="5dp"
                app:layout_constraintRight_toLeftOf="@id/imgLogoItem"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/txtTitleItem"
                android:textColor="#000000"
                android:gravity="left"
                android:textSize="16sp"
                android:text="@string/example"
                android:layout_margin="5dp"
                app:layout_constraintRight_toLeftOf="@id/imgLogoItem"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTypeItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>